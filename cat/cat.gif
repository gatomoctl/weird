<html>
    <head>
        <meta charset="UTF-8" />
        <meta property="og:image" content="https://freebuynow.gatomo.es/_cat.gif" />
        <meta property="og:type" content="video.other" />
        <meta property="og:video" content="https://freebuynow.gatomo.es/cat.mp4" />
        <meta property="og:video:width" content="576" />
        <meta property="og:video:height" content="576" />

        <title>Bombardeen Telecinco</title>
        <link rel="shortcut icon" href="icon.png" type="image/x-icon" />

        <style>
            * {
                font-family: Arial, Helvetica, sans-serif;
                padding: 0px;
                margin: 0px;
            }

            body {
                height: 100vh;

                background-image: url(./_cat.gif);
                background-position: center;
                animation: mosca 1s linear infinite;
            }

            h1 {
                font-size: 100px;
                animation: larv 3s linear infinite;
            }

            .volcan {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;

                width: 100%;
                height: 100vh;
                animation: cebo 0.05s linear infinite;
            }

            .airbus {
                animation: larv 7s linear infinite;
            }

            .cizalla {
                visibility: hidden;
            }

            @keyframes cebo {
                0% {
                    background-color: transparent;
                }

                50% {
                    background-color: black;
                }

                0% {
                    background-color: transparent;
                }
            }

            @keyframes mosca {
                0% {
                    background-size: 20px;
                }

                50% {
                    background-size: 200px;
                }

                100% {
                    background-size: 20px;
                }
            }

            @keyframes larv {
                0% {
                    transform: rotate(0deg);
                    background-color: black;
                    color: white;
                }

                25% {
                    background-color: blue;
                    color: red;
                    font-size: 50px;
                }

                50% {
                    background-color: green;
                    color: yellow;
                    font-size: 100px;
                }

                75% {
                    background-color: aqua;
                    color: purple;
                    font-size: 50px;
                }

                100% {
                    transform: rotate(360deg);
                    background-color: black;
                    color: white;
                }
            }
        </style>
    </head>

    <body id="mosa">
        <div class="volcan">
            <h1 id="pulga">Putos juniors de mierda</h1>
            <a id="tornillo" class="cizalla" href="https://github.com/gatomoctl/weird" target="_blank">
                <img src="./helicopter.gif" class="airbus" alt="" />
            </a>
        </div>

        <script>
            document.getElementById('pulga').onclick = () => {
                let cucaracha = new Audio('./helicopter.opus');
                cucaracha.loop = true;
                cucaracha.play();

                document.getElementById('tornillo').classList.remove('cizalla');
                document.getElementById('mosa').appendChild(tenedor);
            };
        </script>
    </body>
</html>
